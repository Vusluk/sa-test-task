.root
  display: flex
  align-items: center
  justify-content: space-between
  width: 740px
  height: 74px
  padding: 0 30px
  box-shadow: 0 3px 7px rgba(0, 0, 0, 0.1)
  border-radius: 0 5px 5px
  border: 1px solid #e3e4e6
  background-color: #ffffff

.button
  display: flex
  justify-content: center
  align-items: center
  width: 37px
  height: 37px
  border-radius: 19px
  background-color: #3374eb
  cursor: pointer

  &Pause
    padding-left: 5px
  
  &Disable
    background-color: #e8e8e8
    cursor: default
  
  &Icon
    width: 20px
    height: 20px
    fill: white
  
.playbar
  flex-grow: 1
  
.time
  font-size: 15px
  line-height: 16px
  color: #8494a6

.player
  display: none
