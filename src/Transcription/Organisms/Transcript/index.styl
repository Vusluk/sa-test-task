.root
  display: flex
  flex-flow: column nowrap
  width: 800px
  border-radius: 0 5px 5px;
  background-color: #ffffff
  box-shadow: 0 3px 7px rgba(0, 0, 0, 0.1)
  padding: 36px 32px

.title
  font-weight: 600
  font-size: 24px
  line-height: 26px
  margin-bottom: 20px

.date
  font-size: 15px
  line-height: 16px
  margin-bottom: 16px
  color: #8494a6

.hr
  width: 100%
  height: 1px
  background-color: #eff0f2
  margin-bottom: 30px

.phrase
  margin-bottom: 38px