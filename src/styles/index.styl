@import "reset.css"

*
  margin: 0
  padding: 0
  box-sizing: border-box

html, body
  width: 100%
  height: 100%

body
  color: #05294b
  fill: #05294b
  font-family: Arial, sans-serif
  font-size: 16px
  line-height: 18px

a
  appearance: none
  text-decoration: none
  outline: none
  color: inherit
  
:global
  #root
    height: 100%